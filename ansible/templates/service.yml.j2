apiVersion: v1
kind: Service
metadata:
  name: online-grocery-service
  namespace: "{{ k8s_namespace }}"
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: "nlb" # Use a Network Load Balancer
spec:
  type: LoadBalancer
  selector:
    app: online-grocery
  ports:
  - port: 80
    targetPort: 8080
